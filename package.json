{
  "name": "prod-pusher",
  "version": "1.0.0",
  "description": "Portable internal/external file-push tool (Node + basic-ftp)",
  "main": "server/server.js",

  "scripts": {
    "start": "node server/server.js",
    "build:exe": "nexe server/server.js -o dist/Prod-Pusher.exe --resources \"internal/**/*;external/**/*;index.html;style.css;assets/**/*\""
  },

  "dependencies": {
    "basic-ftp": "^5.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nexe": "^5.0.0"
  },

  "author": "Udit Kumar",
  "license": "MIT"
}
